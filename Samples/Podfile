source 'https://github.com/CocoaPods/Specs.git'

abstract_target 'Playground'
use_frameworks!

def common_pods
    pod 'Iconic', :path => '../Iconic.podspec', :submodules => true
end

target 'iOS' do
    platform :ios, '8.0'
    common_pods
end

target 'tvOS' do
    platform :tvos, '9.0'
    common_pods
end

target 'Tests' do
    common_pods
    pod 'FBSnapshotTestCase/Core'
end
