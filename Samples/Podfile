source 'https://github.com/CocoaPods/Specs.git'

abstract_target 'Playground'
use_frameworks!

def common_pods
    pod 'Iconic', :path => '../Iconic.podspec', :submodules => true
end

target 'iOS' do
    platform :ios, '8.0'
    common_pods
end

target 'tvOS' do
    platform :tvos, '9.0'
    common_pods
end

target 'UnitTests' do
    # No need for installing the pod.
    # This target only tests the Iconic.swift base class
end

target 'SnapshotTests' do
    common_pods
    pod 'FBSnapshotTestCase/Core'
end